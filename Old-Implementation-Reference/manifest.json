{
  "manifest_version": 3,
  "name": "Element Remover Pro",
  "version": "2.0.0",
  "description": "Shape the web you use every day - intelligent element removal with memory",
  
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  
  "host_permissions": [
    "<all_urls>"
  ],
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["assets/styles.css"],
      "run_at": "document_idle"
    }
  ],
  
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Element Remover Pro"
  },
  
  "options_page": "options/options.html",
  
  "commands": {
    "open-popup": {
      "suggested_key": {
        "default": "Ctrl+Shift+E",
        "mac": "Command+Shift+E"
      },
      "description": "Open popup"
    },
    "quick-hide": {
      "suggested_key": {
        "default": "Ctrl+Shift+H",
        "mac": "Command+Shift+H"
      },
      "description": "Quick Hide (enter Tweak mode)"
    }
  },

  "web_accessible_resources": [
    {
      "resources": ["ai/ai-service.js"],
      "matches": ["<all_urls>"]
    }
  ]
}